<style type="text/css">
    .device-lg #slider .emphasis-title h1 {
        font-size: 52px;
    }

    .device-md #slider .emphasis-title h1 {
        font-size: 44px;
    }

    .spl-checkbox-btns label {
        margin-bottom: 25px;
    }

        .spl-checkbox-btns label:nth-child(3n) {
            margin-right: 0%;
        }

        .spl-checkbox-btns label .checkbox-img {
            padding: 10px;
            background: rgba(245, 245, 245, 0.6);
            text-align: center;
            position: relative;
            min-height: 100px;
        }

    .spl-checkbox-btns img.tick {
        position: absolute;
        top: 15px;
        left: 15px;
        width: 30px;
        display: none;
    }

    .spl-checkbox-btns .checkbox-img input { /* HIDE checkbox */
        visibility: hidden; /* Makes input not-clickable */
        position: absolute; /* Remove input from document flow */
    }

    .spl-checkbox-btns label img {
        cursor: pointer;
    }

    .spl-checkbox-btns .checkbox-img input:checked + img.tick {
        display: block !important;
    }

    .spl-checkbox-btns .checkbox-img input:checked + checkbox-img {
        background: #000;
    }

    .spl-checkbox-btns .checkbox-txt {
        font-size: 1.4em;
        text-align: center;
        margin: 10px 0;
    }

    .spl-checkbox-btns .checkbox-img .checkbox-txt {
        font-size: 1em;
        text-align: center;
        margin: 20px 0 0px 0px;
        color: #474747;
    }

    .spl-checkbox-btns img.tick + .checkbox-txt {
        font-size: 1.5em;
        margin-top: -0.75em;
        position: absolute;
        width: 100%;
        text-align: center;
        top: 50%;
        left: 0;
    }

    .menuitemshow {
        background: #296cb5 !important;
    }

        .menuitemshow .checkbox-txt {
            color: #fff !important;
        }

        .menuitemshow .visible-icon {
            display: none;
        }

        .menuitemshow .hidden-icon {
            display: inline !important;
        }

    .hidden-icon {
        display: none;
    }

    .policy-wrapper {
        position: relative;
        min-height: 400px;
        width: 90%;
        margin: 50px auto;
    }

    body.policy-inclusion-wrap {
        background: url(~/images/policy-inclusion-bg.png) no-repeat left bottom 55px, url(~/images/body-bg-layer.png);
    }

    .selcttext {
        font-weight: bold;
    }

    .main-head span {
        margin: 10px 0;
        color: #ffde00;
        font-weight: bold;
    }

    .main-head {
        width: 90%;
        margin: 0 auto;
        float: none;
    }

    .row {
        margin-right: -15px;
        margin-left: -15px;
    }

    .row-gap-a {
        padding: 50px 0;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        /*$(".checkbox-img").click(function() {
          $(this).addClass("highlightbox");
          return false;
        });*/
        $('input:checkbox').change(function () {
            if ($(this).is(":checked")) {
                $(this).parent().addClass("menuitemshow");
            } else {
                $(this).parent().removeClass("menuitemshow");
            }
        });
    });


    function toggle(source) {
        checkboxes = document.getElementsByName('policytype');
        for (var i = 0, n = checkboxes.length; i < n; i++) {
            checkboxes[i].checked = source.checked;
            $(".checkbox-img").addClass("menuitemshow");
        }
    }
</script>
